<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/swipe_refresh">
    <RelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/pingia_ui_empty_view" android:visibility="gone"/>
        <include layout="@layout/pingia_ui_error_view" android:visibility="gone"/>
        <include layout="@layout/pingia_ui_loading_view" android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>